port {{ openvpn_port }}
proto {{ openvpn_proto }}
dev tun
ca ca.crt
cert vpn-server.crt
key vpn-server.key
dh none
server 10.8.0.0 255.255.255.0
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
keepalive 10 120
tls-auth ta.key 0
cipher AES-256-GCM
auth SHA256
user nobody
group nogroup
persist-key
persist-tun
status openvpn-status.log
verb 3